import os
from kaggle.api.kaggle_api_extended import KaggleApi

# Authenticate with Kaggle API
api = KaggleApi()
api.authenticate()

# Download the dataset
api.dataset_download_files('salader/dogs-vs-cats', path='datasets/', unzip=True)

import os

# Define the path to the extracted dataset
extract_dir = 'C:\\Users\\bhanop1\\Desktop\\Code\\Image-Classification-\\datasets\\dogs_vs_cats'

# List files in the extraction directory
extracted_files = os.listdir(extract_dir)
print(f'Files in the extracted dataset directory: {extracted_files}')
